<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:orientation="vertical"
              android:paddingTop="@dimen/distance_10">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:paddingLeft="@dimen/distance_10"
        android:paddingRight="@dimen/distance_10">

        <ImageView
            android:id="@+id/round_image"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:src="@drawable/img_default_grey"/>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/distance_5"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_toRightOf="@id/round_image"
                android:orientation="vertical">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="center_vertical"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/txt_name"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:padding="@dimen/distance_5"
                        android:text="@string/app_name"
                        android:textColor="@color/font_content"
                        android:textSize="@dimen/font_size_normal"/>

                    <TextView
                        android:id="@+id/txt_level"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:layout_toRightOf="@+id/txt_name"
                        android:background="@drawable/shape_button_level"
                        android:paddingLeft="@dimen/distance_10"
                        android:paddingRight="@dimen/distance_10"
                        android:text="@string/app_name"
                        android:textColor="@color/font_white"
                        android:textSize="@dimen/font_size_least"/>

                    <com.android.base.widget.AutoBgButton
                        android:id="@+id/btn_add_care"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:layout_centerVertical="true"
                        android:background="@drawable/shape_button_care"
                        android:minWidth="40dp"
                        android:paddingLeft="@dimen/distance_10"
                        android:paddingRight="@dimen/distance_10"
                        android:paddingTop="3dp"
                        android:paddingBottom="3dp"
                        android:text="@string/add_care"
                        android:textColor="@color/content_blue"
                        android:textSize="@dimen/font_size_little"/>
                </RelativeLayout>

                <TextView
                    android:id="@+id/txt_detail"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:padding="@dimen/distance_5"
                    android:text="@string/app_name"
                    android:textColor="@color/font_gray"
                    android:textSize="@dimen/font_size_little"/>

            </LinearLayout>
        </LinearLayout>

    </LinearLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingLeft="@dimen/distance_10"
        android:paddingRight="@dimen/distance_10"
        android:visibility="gone"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:orientation="vertical"
            android:padding="@dimen/distance_10">

            <TextView
                android:id="@+id/txt_article"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="0"
                android:textColor="@color/font_content"
                android:textSize="@dimen/font_size_middle"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="3dp"
                android:gravity="center"
                android:text="帖子"
                android:textColor="@color/font_content"
                android:textSize="@dimen/font_size_normal"/>

        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:gravity="center"
            android:orientation="vertical"
            android:padding="@dimen/distance_10">

            <TextView
                android:id="@+id/txt_gz"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="0"
                android:textColor="@color/font_content"
                android:textSize="@dimen/font_size_middle"/>

            <TextView

                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="3dp"
                android:gravity="center"
                android:text="关注"
                android:textColor="@color/font_content"
                android:textSize="@dimen/font_size_normal"/>


        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:gravity="center"
            android:orientation="vertical"
            android:padding="@dimen/distance_10">

            <TextView
                android:id="@+id/txt_fs"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="0"
                android:textColor="@color/font_content"
                android:textSize="@dimen/font_size_middle"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="3dp"
                android:gravity="center"
                android:text="粉丝"
                android:textColor="@color/font_content"
                android:textSize="@dimen/font_size_normal"/>

        </LinearLayout>
    </RelativeLayout>
</LinearLayout>